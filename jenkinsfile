pipeline {
    agent any
    
    environment {
        MVN_HOME = "C:\apache-maven-3.9.9"  // Set this path accordingly
        JAVA_HOME = "C:\Program Files\Java\jdk-17" // Set Java path
    }
    
    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'main', credentialsId: 'github-token', url: 'https://github.com/your-username/your-repo.git'
            }
        }

        stage('Build') {
            steps {
                sh '${MVN_HOME}/bin/mvn clean install'
            }
        }

        stage('Test') {
            steps {
                sh '${MVN_HOME}/bin/mvn test'
            }
        }

        stage('Deploy') {
            steps {
                echo "Deploying Application... (Placeholder Step)"
            }
        }
    }
}
